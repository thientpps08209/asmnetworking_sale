<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ps08209_ps08304_ASMNETWORKING">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.ps08209_ps08304_ASMNETWORKING.Screens.AddProductActivity"></activity>
        <activity android:name="com.example.ps08209_ps08304_ASMNETWORKING.Screens.SignupActivity" />
        <activity android:name="com.example.ps08209_ps08304_ASMNETWORKING.utilities.CustomAlertDialogActivity" />
        <activity android:name="com.example.ps08209_ps08304_ASMNETWORKING.Screens.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.ps08209_ps08304_ASMNETWORKING.Screens.LoginActivity" />
        <activity android:name="com.example.ps08209_ps08304_ASMNETWORKING.Screens.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>