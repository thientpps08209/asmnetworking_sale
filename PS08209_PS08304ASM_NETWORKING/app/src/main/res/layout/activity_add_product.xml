<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.ps08209_ps08304_ASMNETWORKING.Screens.AddProductActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green2"
        android:elevation="0dp"
        android:orientation="vertical"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/green2"
            android:elevation="0dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:gravity="center"
            android:theme="@style/ToolbarTheme"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextAppearance="@style/Toolbar.TitleText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/background_gradient1"
            app:layout_collapseMode="pin" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/iv_addImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/iphone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="3dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_weight="0"
                android:background="@color/purple" />

            <com.example.ps08209_ps08304_ASMNETWORKING.utilities.ClearableEditText
                android:id="@+id/ed_maSp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/sharp"
                android:focusable="true"
                android:hint="Mã sản phẩm"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"
                android:textColor="#000"
                android:textColorHint="#979A9A"
                android:textCursorDrawable="@null"
                android:textSize="14sp"
                app:backgroundTint="@android:color/transparent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="3dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_weight="0"
                android:background="@color/green2" />

            <com.example.ps08209_ps08304_ASMNETWORKING.utilities.ClearableEditText
                android:id="@+id/ed_tenSp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/sharp"
                android:focusable="true"
                android:hint="Tên sản phẩm"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"
                android:textColor="#000"
                android:textColorHint="#979A9A"
                android:textCursorDrawable="@null"
                android:textSize="14sp"
                app:backgroundTint="@android:color/transparent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="3dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_weight="0"
                android:background="@color/orange1" />

            <com.example.ps08209_ps08304_ASMNETWORKING.utilities.ClearableEditText
                android:id="@+id/ed_nsx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:focusable="true"
                android:hint="Nhà sản xuất"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"
                android:textColor="#000"
                android:textColorHint="#979A9A"
                android:textCursorDrawable="@null"
                android:textSize="14sp"
                app:backgroundTint="@android:color/transparent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="3dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_weight="0"
                android:background="@color/yellow1" />

            <com.example.ps08209_ps08304_ASMNETWORKING.utilities.ClearableEditText
                android:id="@+id/ed_gianBan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:focusable="true"
                android:hint="Giá bán"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"
                android:textColor="#000"
                android:textColorHint="#979A9A"
                android:textCursorDrawable="@null"
                android:textSize="14sp"
                app:backgroundTint="@android:color/transparent" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="Thêm"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="Hủy"
            android:textColor="@color/red2"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>